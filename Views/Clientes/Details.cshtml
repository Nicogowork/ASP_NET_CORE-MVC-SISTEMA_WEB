@model Sistema_Web.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" class="text-decoration-none">
                        <i class="bi bi-people me-1"></i>Clientes
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Detalhes</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Card Principal -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-4">
            <!-- Header do Card -->
            <div class="card-header bg-gradient text-white p-4">
                <div class="d-flex align-items-center">
                    <div class="bg-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                         style="width: 80px; height: 80px;">
                        <span class="display-4 fw-bold" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                            @(Model.Nome?.Substring(0, 1).ToUpper() ?? "?")
                        </span>
                    </div>
                    <div>
                        <h2 class="mb-1 fw-bold">@Html.DisplayFor(model => model.Nome)</h2>
                        <p class="mb-0 opacity-75">
                            <i class="bi bi-hash me-1"></i>Cliente ID: @Model.Id
                        </p>
                    </div>
                </div>
            </div>

            <!-- Corpo do Card -->
            <div class="card-body p-4">
                <h5 class="fw-bold mb-4 pb-2 border-bottom">
                    <i class="bi bi-person-lines-fill text-primary me-2"></i>Informações do Cliente
                </h5>

                <div class="row g-4">
                    <!-- Nome -->
                    <div class="col-md-12">
                        <div class="p-3 bg-light rounded">
                            <label class="text-muted small mb-2 d-block">
                                <i class="bi bi-person me-1"></i>Nome Completo
                            </label>
                            <p class="mb-0 h5">@Html.DisplayFor(model => model.Nome)</p>
                        </div>
                    </div>

                    <!-- Morada -->
                    <div class="col-md-12">
                        <div class="p-3 bg-light rounded">
                            <label class="text-muted small mb-2 d-block">
                                <i class="bi bi-geo-alt me-1"></i>Morada
                            </label>
                            <p class="mb-0 h6">
                                @if (!string.IsNullOrEmpty(Model.Morada))
                                {
                                    @Html.DisplayFor(model => model.Morada)
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Não especificada</span>
                                }
                            </p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-12">
                        <div class="p-3 bg-light rounded">
                            <label class="text-muted small mb-2 d-block">
                                <i class="bi bi-envelope me-1"></i>Email
                            </label>
                            <p class="mb-0 h6">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    @Html.DisplayFor(model => model.Email)
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer do Card -->
            <div class="card-footer bg-white border-top p-4">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Voltar à Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Editar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Ações -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-gear text-primary me-2"></i>Ações Disponíveis
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Editar Cliente
                    </a>
                    <a href="mailto:@Model.Email" class="btn btn-outline-success">
                        <i class="bi bi-envelope me-2"></i>Enviar Email
                    </a>
                    <hr class="my-2">
                    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>Eliminar Cliente
                    </a>
                </div>
            </div>
        </div>

        <!-- Estatísticas -->
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="bi bi-graph-up text-info me-2"></i>Estatísticas
                </h6>
                <ul class="list-unstyled small mb-0">
                    <li class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">
                            <i class="bi bi-calendar-check me-1"></i>Cliente desde:
                        </span>
                        <strong>2024</strong>
                    </li>
                    <li class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">
                            <i class="bi bi-clipboard-check me-1"></i>Projetos:
                        </span>
                        <strong>0</strong>
                    </li>
                    <li class="mb-2 d-flex justify-content-between">
                        <span class="text-muted">
                            <i class="bi bi-star me-1"></i>Status:
                        </span>
                        <span class="badge bg-success">Ativo</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
